#include "holberton.h"
#include <stdio.h>

/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
char *leet(char *a)
{
  int i = 0, j = 0;
    char letras[] = "aAeEoOtTlL";
    char num[] = "4433007711";

    while (*(a + 1) != 0)
      {
	for (j = 0; j <= 9; j++)
	  {
	    if (*(a + 1) == letras[j])
	      {
		*(a + 1) = num[j];
	    break;
	  }
      }
    i++;
      }
    return (a);
}
