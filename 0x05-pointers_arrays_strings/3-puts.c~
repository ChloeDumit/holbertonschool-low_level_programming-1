#include "holberton.h"
#include <stdio.h>
/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
void _puts(char *str)
{

  int a = *str;
  while (a != '\0')
    {
      _putchar(a); /* print letter */
      a = a + 1;  /* point to the next letter. */
    }
  _putchar ('\n');
}
