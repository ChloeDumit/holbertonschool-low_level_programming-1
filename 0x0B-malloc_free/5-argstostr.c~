#include "holberton.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
char *argstostr(int ac, char **av)
{
  char **p;
  int i, j;

  if (ac == 0 || av == NULL)
    {
      return (NULL);
    }

  p = malloc(sizeof(char) * ac);
  for (i = 0; i < ac; i++)
    {
      for (j = 0; av[j] != 0; j++)
	{
	  if (av[j + 1] == 0)
	    {
	      p[i] = malloc(sizeof((char) * j) + 1);
	      break;
	    }
	}
    }
  for (i = 0; i < ac; i++)
    {
      for (j = 0; av[j] != 0; j++)
	{
	  p += av[i][j];
	  p += '\n';
	}
    }
      return ((char *)p);
    }
